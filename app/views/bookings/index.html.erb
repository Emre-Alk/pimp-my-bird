<div class="container">
  <h1>Bookings</h1>
  <%@bookings.each do |booking| %>
  <%= link_to bird_path(booking.bird), style:"text-decoration: none; color: black;" do %>
    <div class="card-product">
    <% if @bird.picture.attached? %>
      <%= cl_image_tag booking.bird.picture.key, crop: :fit, gravity: :center %>
    <% end %>
      <div class="card-product-infos">
        <h2><%= booking.bird.name %></h2>
        From <span> <%= booking.start_date %> </span> to <span> <%= booking.end_date %> </span>
        <h2 class="font-weight-bold"><%= (booking.end_date - booking.start_date).to_i * booking.bird.price %> â‚¬</h2>
      </div>
  </div>
  <% end %>
  <% end %>
</div>
